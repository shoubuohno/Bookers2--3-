<div class="row">
		<div class="col-xs-3">
		    <!--user info -->
			<%= render partial: 'info', locals: { user: @user } %>
			<!-- new book -->
			<%= render partial: 'books/form', locals: { book: @book } %>
		</div>
		<!-- users list -->
		<div class="col-xs-9">
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user_path(user.id) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
</div>