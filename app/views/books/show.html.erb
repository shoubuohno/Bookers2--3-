<p><%= notice %></p>
<div class="row">
<div class="col-xs-3">
	<!--userinfo-->
	<%= render partial: 'users/info', locals: { user: @user } %>
	<!--form-->
	<%= render partial: 'form', locals: { book: @book } %>
</div>
<div class="col-xs-9">
	<h1>Book detail</h1>
	<table class="table">
		<tbody>
			<tr>
				<td>
					<%= link_to user_path(@user.id) do %>
					<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
					<%= @user.name %>
						<% end %>
					</td>
				<td><%= @book_show.title %></td>
	            <td><%= @book_show.body %></td>
	            <% if current_user == @book_show.user %>

	              <td><%= link_to "Edit", edit_book_path(@book_show.id) %></td>
	              <td><%= link_to "Destroy", book_path(@book_show.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
	            <% end %>
			</tr>
		</tbody>
	</table>
</div>
</div>
