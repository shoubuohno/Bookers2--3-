<!DOCTYPE html>
<html>
  <head>
    <title>K3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>
  

  <body>
    <header class="navbar navbar-inverse">
      <div class="container">
              <p class="nav navbar-nav navbar-left">Bookers</p>
          <div class="nav navbar-nav navbar-right">
             <% if user_signed_in? %>
              <p class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to "Home", user_path(current_user.id) %></p>
              <p class="glyphicon glyphicon-user" aria-hidden="true"><%= link_to "Users", users_path %></p>
              <p class="glyphicon glyphicon-book" aria-hidden="true"><%= link_to "Books", books_path %></p>
              <p class="glyphicon glyphicon-log-out" aria-hidden="true"><%= link_to "logout", destroy_user_session_path, method: :delete %></p>
             <% else %>
               <p class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to "Home", root_path %></p>
              <p class="glyphicon glyphicon-paperclip" aria-hidden="true"><%= link_to "About", "home/about" %> </p>
              <p class="glyphicon glyphicon-edit" aria-hidden="true"><%= link_to "sign up", new_user_registration_path %></p>
              <p  class="glyphicon glyphicon-log-in" aria-hidden="true"><%= link_to "login", new_user_session_path %></p>
              <% end %>
          </div>
      </div>
  </header>
    
  <div class="container">
     <%= yield %>
  </div>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-3 col-md-ofset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
 
</html>
